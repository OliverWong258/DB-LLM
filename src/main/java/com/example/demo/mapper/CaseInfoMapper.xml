<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.CaseInfoMapper">
    <!-- 根据id查询案件，未提供id则返回所有案件-->
    <select id="searchCases" resultType="com.example.demo.entity.CaseInfo">
        SELECT * FROM cases
        WHERE 1=1
        <if test="caseID != -1">
            AND id=caseID
        </if>
    </select>
</mapper>